{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@repo/shared/*": [
        "../shared/*"
      ],
      "@/*": [
        "./src/*",
        "../frontend/src/*"
      ],
      "@/modules/*": [
        "../backend/src/modules/*"
      ],
      "@/pkg/middleware/*": [
        "../backend/src/pkg/middleware/*"
      ],
      "@/pkg/util/*": [
        "../backend/src/pkg/util/*"
      ],
      "@repo/*": [
        "../*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}